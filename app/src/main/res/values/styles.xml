<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundedButton">
        <!-- Белый фон -->
        <item name="android:background">@drawable/rounded_background_button</item>
        <!-- Внутренние отступы -->
        <item name="android:padding">12dp</item>
        <!-- Текстовый цвет -->
        <item name="android:textColor">#000000</item>
        <!-- Минимальная высота кнопки -->
        <item name="android:minHeight">48dp</item>
        <!-- Текст размер -->
        <item name="android:textSize">14dp</item>
        <!-- Без тени -->
        <item name="android:elevation">0dp</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <!-- Стиль для круглого изображения (через ShapeAppearance) -->
    <style name="CircularImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- 50% для круглого изображения -->
    </style>


</resources>